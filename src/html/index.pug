include atoms/button

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        meta(name="description", content="A landing page built with as little tooling as possible. At least having no more than it's really needed.")
        title Webpack setting works!
    body
        main
            section(class="dark-blue")
                +button("atom-button --bordered --small", "Hello")
            section(class="dark-blue")
                +button("atom-button --orange --take-up-whole-space", "Hello")
            section(class="dark-blue")
                +button("atom-button --blue --take-up-whole-space", "Hello")
            section(class="wrapper")
                section(class="smokeGray")
                    p Terlalu manis untuk dilupakan.
                    +button('atom-button --orange --small', "Hai!")
                    +button('atom-button --orange --small', "Yolo!")
                    +button('atom-button --orange --small', "Good!")
                    span(class="icon icon-bullhorn")
