{
  "name": "vanilla-page",
  "version": "1.0.0",
  "description": "A simple landing page built with as litle tooling as possible. At least having no more than it's really needed.",
  "repository": "https://github.com/miayam/vanilla-page",
  "author": "Muhammad D. Ramadhan",
  "private": true,
  "license": "MIT",
  "scripts": {
    "env:dev": "cross-env NODE_ENV=dev",
    "env:prod": "cross-env NODE_ENV=prod",
    "env:test": "cross-env NODE_ENV=test",
    "webpack": "webpack $npm_package_config_webpack_args",
    "start": "yarn env:dev webpack-dev-server --open",
    "webpack:test:server": "yarn env:test && yarn webpack --watch",
    "jest": "jest test/bundle.test.js",
    "jest:server": "jest test/bundle.test.js --watch",
    "build:clean": "rimraf \"dist/!(.git*|Procfile)**\"",
    "build": "yarn build:clean && yarn env:prod && yarn webpack"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.7.1",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.11.0",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  },
  "config": {
    "webpack_args": " --config webpack.config.js --display-error-details"
  }
}