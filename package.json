{
  "name": "vanilla-page",
  "version": "1.0.0",
  "description": "A simple landing page built with as litle tooling as possible. At least having no more than it's really needed.",
  "repository": "https://github.com/miayam/vanilla-page",
  "author": "Muhammad D. Ramadhan",
  "private": true,
  "license": "MIT",
  "scripts": {
    "env:dev": "cross-env NODE_ENV=dev",
    "env:prod": "cross-env NODE_ENV=prod",
    "env:test": "cross-env NODE_ENV=test",
    "start": "yarn env:dev webpack-dev-server --open",
    "webpack:test:server": "yarn env:test webpack $npm_package_config_webpack_args --watch",
    "jest": "jest test/bundle.test.js",
    "jest:server": "jest test/bundle.test.js --watch",
    "build:clean": "rimraf \"dist/!(.git*|Procfile)**\"",
    "build": "yarn build:clean && yarn env:prod webpack $npm_package_config_webpack_args",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "sanitize.css": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "babel-minify-webpack-plugin": "^0.3.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "file-loader": "^3.0.1",
    "gh-pages": "^2.0.1",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.7.1",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "purgecss-webpack-plugin": "^1.5.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1"
  },
  "config": {
    "webpack_args": " --config webpack.config.js --display-error-details"
  }
}
